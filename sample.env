POSTGRES_DB=maybe_production
DB_POOL=20

# ===========================================================================
# External Services (Optional but recommended)
# ===========================================================================

# OpenAI for AI features (chat, rules)
OPENAI_ACCESS_TOKEN=your_openai_token_here

# Stripe for payments
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Plaid for bank connections
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here

# ===========================================================================
# Email Configuration (Optional but recommended)
# ===========================================================================

# SMTP settings for email delivery
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=yourdomain.com
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# ===========================================================================
# File Storage (Optional - defaults to local storage)
# ===========================================================================

# Set to 's3' to use AWS S3 instead of local storage
STORAGE_SERVICE=local

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_BUCKET=your-maybe-storage-bucket

# ===========================================================================
# App Configuration
# ===========================================================================

# Set to 'managed' if you want to use Maybe's hosted services
APP_MODE=self_hosted

# Set to 'true' if you want to require email confirmation
REQUIRE_EMAIL_CONFIRMATION=false

# ===========================================================================
# Performance Tuning (Optional)
# ===========================================================================

# Number of worker processes
WEB_CONCURRENCY=2

# Sidekiq concurrency
SIDEKIQ_CONCURRENCY=10

# ===========================================================================
# Monitoring (Optional)
# ===========================================================================

# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Log level
LOG_LEVEL=info 