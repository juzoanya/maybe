SECRET_KEY_BASE=2f03ddb7728dacd743438998fe0f3ffeab1cfb934d7de356e9935d5ff5d295f22d75864dc181e90a5076870f180ada26ae0637950eee24dd3b30a0660969fb67
RAILS_MASTER_KEY=063c08be6cc21eed10f75b9aad10f0e5

# ===========================================================================
# Database Configuration
# ===========================================================================

POSTGRES_USER=maybe_user
