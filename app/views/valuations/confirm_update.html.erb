<%= render DS::Dialog.new do |dialog| %>
  <% dialog.with_header(title: "Confirm balance update") %>
  <% dialog.with_body do %>
    <%= styled_form_with model: @entry, url: valuation_path(@entry), method: :patch, class: "space-y-4" do |form| %>
      <%= form.hidden_field :date %>
      <%= form.hidden_field :amount %>
      <%= form.hidden_field :exchange_rate %>
      <%= form.hidden_field :currency %>

      <%= render "confirmation_contents",
          reconciliation_dry_run: @reconciliation_dry_run,
          account: @account,
          entry: @entry,
          action_verb: "update",
          is_update: true %>

      <%= form.submit "Confirm" %>
    <% end %>
  <% end %>
<% end %>
